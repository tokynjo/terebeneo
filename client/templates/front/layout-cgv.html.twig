<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="shortcut icon" href="{{ asset('neobe.ico') }}" />
    {% block stylesheets %}
    <!-- Bootstrap core CSS-->
    <link href="{{ asset('/common/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="{{ asset('/common/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="{{ asset('/common/css/default.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/front/css/front.css') }}" rel="stylesheet">
    <style>
        {{ widgetColor()|raw }}
    </style>
    {% endblock %}
</head>

<body class="bg-white" id="page-top">
<!-- Navigation-->
<div class="content-wrapper">
    <header id="header">
        <div class="header-top">
            <div class="container-fluid">
                {{ widgetHeaderTop()|raw }}
            </div>
        </div>
        <div class="header-logo" id="header-logo">
            <div class="container-fluid">
                {{ widgetLogo()|raw }}
            </div>
        </div>
        <div class="header-title">
            <div class="container-fluid">
                {% block header_title %}
                    Activation Pack de Sauvegarde {{ widgetProduct()|raw }} – Étape 1/3
                {% endblock %}
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 page-content">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>
    <!-- /.container-fluid-->
    <!-- /.content-wrapper-->
    <footer class="sticky-footer">
        <div class="container">
            {{ widgetFooter()|raw }}
        </div>
    </footer>
    <!-- Scroll to Top Button-->
    {#<a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>#}
    <!-- Bootstrap core JavaScript-->
    <script src="{{ asset('/common/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('/common/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <!-- Core plugin JavaScript-->
    <script src="{{ asset('/common/jquery-easing/jquery.easing.min.js') }}"></script>
    <!-- Custom scripts for all pages-->
    <script src="{{ asset('/common/js/default.min.js') }}"></script>
    <script src="{{ asset('/front/js/front.js') }}"></script>
    {% block javascripts %}
    {% endblock %}
</div>
</body>

</html>
