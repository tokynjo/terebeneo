{% trans_default_domain 'FOSUserBundle' %}
<title>{% block title %}DROPSALE{% endblock %}</title>
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/sb-admin.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.4.3.min.css">
{% endblock %}
{% block content %}

    <style>
        .form-signin {
            max-width: 340px;
            padding: 15px;
            margin: 0 auto;
        }

        .login-container {
            -webkit-box-shadow: 10px 12px 31px 1px rgba(102, 100, 102, 0.65);
            -moz-box-shadow: 10px 12px 31px 1px rgba(102, 100, 102, 0.65);
            box-shadow: 10px 12px 31px 1px rgba(102, 100, 102, 0.65);
            width: 50%;
        }

        .color-bleu {
            background-color: #59B1DF;
            border-color: #59B1DF;
            border-radius: 18px;
        }

        .input-form, .input-form:focus {
            border-width: 0px 0px 1px 0px !important;
            border-radius: 0px;
            -webkit-box-shadow: none;
        }

        .logo {
            width: 30%;
            height: 10%;

        }

        .bnt-bord-raduis {
            border-radius: 18px;
        }
    </style>

    <div class="container login-container" style="background-color: #FFF">
        <div class="login-box-body">
            <div style="text-align: center!important;">
                <img src="{{ asset('assets/img/logo.png') }}" class="logo"/>
            </div>
            <p class="login-box-msg form-signin">Réinitialisation de votre mot de passe</p>


            <div class="col-md-8 pull-left bba-grid">
                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                <div class="creation-compte-name">
                    <div class="row">
                        {% if not form.plainPassword.vars.valid %}
                            <div class="alert alert-danger alert-dismissable">
                                les deux mots de passe doivent être identiques.
                            </div>
                        {% endif %}
                        <div class="col-md-12 bba-grid-right sm-reset">
                            <div class="form-group form-group-lg">
                                <label for="password">Nouveau mot de passe</label>
                                {{ form_widget(form.plainPassword.children['first'], { 'attr': {'class': 'form-control', 'placeholder': "Nouveau mot de passe" } }) }}
                            </div>
                        </div>

                        <div class="col-md-12 bba-grid-right sm-reset">
                            <div class="form-group form-group-lg">
                                <label for="password">Confirmation</label>
                                {{ form_widget(form.plainPassword.children['second'], { 'attr': {'class': 'form-control', 'placeholder': "Vérification" } }) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group form-group-lg">
                    <div class="row">
                        <div class="col-xs-4">
                            <a href="{{ path('homepage') }}" class="btn btn-default btn-block btn-flat bnt-bord-raduis">Annuler</a>
                        </div>
                        <div class="col-xs-4">
                        </div>
                        <div class="col-xs-4">
                            <input type="submit" class="btn btn-primary btn-block btn-flat color-bleu" value="Valider">

                        </div>
                    </div>
                </div>

                {{ form_end(form) }}

                </form>
            </div>

        </div>
    </div>
{% endblock content %}
